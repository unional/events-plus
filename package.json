{
  "name": "@unional/events-plus",
  "version": "0.0.0-development",
  "description": "Provides additional features to event emitters",
  "homepage": "https://github.com/unional/events-plus",
  "bugs": {
    "url": "https://github.com/unional/events-plus/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/events-plus.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:doc": "typedoc",
    "clean": "rimraf lib coverage",
    "coverage": "jest --coverage",
    "coverage:node": "yarn test:node --coverage",
    "coverage:jsdom": "yarn test:jsdom --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,js .",
    "nuke": "yarn clean && rimraf node_modules",
    "prepare": "husky install",
    "release": "npx semantic-release",
    "size": "size-limit",
    "test": "jest",
    "test:node": "jest -c ./jest.config.node.js",
    "test:jsdom": "jest -c ./jest.config.jsdom.js",
    "test:types": "tsc",
    "verify": "npm-run-all clean -p build lint depcheck coverage -p size",
    "watch": "jest --watch"
  },
  "dependencies": {
    "@just-func/types": "^0.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-plugin-harmony": "^7.1.0",
    "eventemitter2": "^6.4.5",
    "eventemitter3": "^4.0.7",
    "fbemitter": "^3.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-validate": "^28.1.1",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "standard-log": "^9.1.5",
    "typedoc": "^0.22.17",
    "typedoc-plugin-extras": "^2.2.3",
    "typescript": "^4.7.3"
  },
  "size-limit": [
    {
      "limit": "10 kb"
    }
  ],
  "packageManager": "yarn@3.2.1"
}
